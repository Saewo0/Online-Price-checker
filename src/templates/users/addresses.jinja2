{% extends "base.jinja2" %}
{% block content %}
    <div class="page-header">
        <h1>Addresses
            <small>User's addresses</small>
        </h1>
    </div>
    <div class="list-group">
        {% for address in addresses %}
            {{ count }}
            <h3 class="list-group-item-heading"> Address {{ loop.index }}:</h3>
            <a class="list-group-item">
                <p>Phone: {{ address.phone }}</p>
                <p>Room: {{ address.room }}</p>
                <p>{{ address.street }}</p>
                <p>{{ address.city }}, <strong>{{ address.state }}</strong> <strong>{{ address.zip_code }}</strong></p>
                <a class="btn btn-danger" href="{{ url_for('addresses.delete_address', address_id=address.address_id) }}" role="button">Permanently Delete Address</a>
            </a>
        {% endfor %}
    </div>
    <a class="btn btn-success" href="{{ url_for('addresses.create_address') }}"><span
            class="glyphicon glyphicon-plus"></span> Create new</a>
{% endblock %}