{% extends "base.jinja2" %}
{% block content %}
    <div class="page-header">
        <h1>Create Address</h1>
    </div>
    <div class="form">
        <form method="post">
            <div class="form-group">
                <label for="name">Room</label>
                <input type="text" class="form-control" id="room" name="room" placeholder="Room #">
            </div>
            <div class="form-group">
                <label for="category">Street</label>
                <input type="text" class="form-control" id="street" name="street" placeholder="Street #">
            </div>
            <div class="form-group">
                <label for="url">City</label>
                <input type="text" class="form-control" id="city" name="city" placeholder="New York">
            </div>
            <div class="form-group">
                <label for="price_limit">State</label>
                <input type="text" class="form-control" id="state" name="state" placeholder="NY">
            </div>
            <div class="form-group">
                <label for="price_limit">Zip Code</label>
                <input type="text" class="form-control" id="zip_code" name="zip_code" placeholder="10000">
            </div>
            <div class="form-group">
                <label for="price_limit">Phone</label>
                <input type="text" class="form-control" id="phone" name="phone" placeholder="(123) 456-6789">
            </div>
            <button type="submit" class="btn btn-default">Create</button>
        </form>
    </div>
{% endblock %}